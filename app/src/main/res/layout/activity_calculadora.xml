<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.idi.marinamoreno.calculadora.CalculadoraActivity"
    android:layout_weight="6">

    <TableRow android:weightSum="5"
        android:layout_weight="1">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_marginTop="20dp"
                android:id="@+id/phone"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@mipmap/ic_phone_in_talk"
                android:layout_gravity="left"/>
            <ImageButton
                android:id="@+id/internet"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@mipmap/ic_earth"
                android:layout_gravity="left"
                />
        </LinearLayout>

        <TextView
            android:layout_weight="4"
            android:id="@+id/num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="70dp"
            android:hint="0"
            android:inputType="number"
            android:textColorHint="@color/colorPrimaryText"
            android:textColor="@color/colorPrimaryText"
            android:maxLength="7" >
        </TextView>

    </TableRow>

    <TableRow android:weightSum="4"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/boto_C"
            android:layout_weight="1"
            android:text="Clear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:background="@color/colorPrimaryLight"/>

        <Button
            android:id="@+id/boto_AC"
            android:layout_weight="1"
            android:text="Delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:background="@color/colorPrimaryLight"/>
        <Button
            android:id="@+id/boto_100"
            android:layout_weight="1"
            android:text="%"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:background="@color/colorPrimaryLight"/>
        <Button
            android:id="@+id/boto_divisio"
            android:layout_weight="1"
            android:text="/"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:background="@color/colorPrimaryLight"/>
    </TableRow>
    <TableRow android:weightSum="4"
        android:layout_weight="1">
        <Button
            android:id="@+id/boto_7"
            android:layout_weight="1"
            android:text="7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:background="@color/colorIcons"/>
        <Button
            android:id="@+id/boto_8"
            android:layout_weight="1"
            android:text="8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:background="@color/colorIcons"/>
        <Button
            android:id="@+id/boto_9"
            android:layout_weight="1"
            android:text="9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:background="@color/colorIcons"/>
        <Button
            android:id="@+id/boto_multiplicacio"
            android:layout_weight="1"
            android:text="x"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:background="@color/colorPrimaryLight"/>
    </TableRow>
    <TableRow android:weightSum="4"
        android:layout_weight="1">
        <Button
            android:id="@+id/boto_4"
            android:layout_weight="1"
            android:text="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:background="@color/colorIcons"/>
        <Button
            android:id="@+id/boto_5"
            android:layout_weight="1"
            android:text="5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:background="@color/colorIcons"/>
        <Button
            android:id="@+id/boto_6"
            android:layout_weight="1"
            android:text="6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:background="@color/colorIcons"/>
        <Button
            android:id="@+id/boto_resta"
            android:layout_weight="1"
            android:text="-"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:background="@color/colorPrimaryLight"/>
    </TableRow>
    <TableRow android:weightSum="4"
        android:layout_weight="1">
        <Button
            android:id="@+id/boto_1"
            android:layout_weight="1"
            android:text="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:background="@color/colorIcons"/>
        <Button
            android:id="@+id/boto_2"
            android:layout_weight="1"
            android:text="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:background="@color/colorIcons"/>
        <Button
            android:id="@+id/boto_3"
            android:layout_weight="1"
            android:text="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:background="@color/colorIcons"/>
        <Button
            android:id="@+id/boto_suma"
            android:layout_weight="1"
            android:text="+"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:background="@color/colorPrimaryLight"/>
    </TableRow>
    <TableRow android:weightSum="4"
        android:layout_weight="1">
        <Button
            android:id="@+id/boto_0"
            android:layout_weight="1"
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:background="@color/colorIcons"/>

        <Button
            android:id="@+id/boto_ANS"
            android:layout_weight="1"
            android:text="ANS"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:background="@color/colorIcons"/>

        <Button
            android:id="@+id/boto_coma"
            android:layout_weight="1"
            android:text="."
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:background="@color/colorIcons"/>
        <Button
            android:id="@+id/boto_resultat"
            android:layout_weight="1"
            android:text="="
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:background="@color/colorPrimaryText"/>
    </TableRow>
</TableLayout>
